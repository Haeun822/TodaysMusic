<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="13.5dp"
                android:paddingTop="6.5dp"
                android:paddingRight="13.5dp"
                android:paddingBottom="6.5dp"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/item_music_image"
        android:layout_gravity="left|center_vertical"
        android:src="@drawable/music_blank"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textLayout"
        android:layout_toRightOf="@+id/item_music_image"
        android:layout_toEndOf="@+id/item_music_image"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title-Artist"
            android:id="@+id/titleText"
            android:maxLines="2"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"/>
    </LinearLayout>

</RelativeLayout>